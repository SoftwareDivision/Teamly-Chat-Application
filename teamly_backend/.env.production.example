# Production Environment Variables
# Copy this to .env.production and fill in with actual values
# NEVER commit .env.production to git!

# Server Configuration
PORT=5205
NODE_ENV=production

# CORS - Specific origins only
ALLOWED_ORIGINS=https://teamly.com,https://www.teamly.com,https://app.teamly.com

# PostgreSQL Database
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=teamly_prod
DB_USER=teamly_user
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING

# Firebase Configuration
FIREBASE_PROJECT_ID=teamly-503a7
FIREBASE_STORAGE_BUCKET=teamly-503a7.firebasestorage.app

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASSWORD=CHANGE_THIS_TO_APP_SPECIFIC_PASSWORD
EMAIL_FROM=Teamly <your-production-email@gmail.com>

# OTP Configuration
OTP_EXPIRY_MINUTES=5

# Google Drive OAuth
GOOGLE_CLIENT_ID=your-production-client-id
GOOGLE_CLIENT_SECRET=CHANGE_THIS_TO_PRODUCTION_SECRET
GOOGLE_REDIRECT_URI=https://api.teamly.com/api/google-drive/callback

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# Redis (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_IF_USING_REDIS
